<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/descriptionTest"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:text="@string/main_text_description" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/clearButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:text="@string/main_clear_button"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="310dp"
            android:layout_height="189dp" android:id="@+id/scanOutput"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTest" android:layout_marginTop="32dp"
            android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>